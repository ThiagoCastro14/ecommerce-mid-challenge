<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
          https://maven.apache.org/xsd/settings-1.0.0.xsd">

  <!-- Repositório local ISOLADO deste projeto -->
  <localRepository>C:\Users\thiag\Desktop\entrevista\ecommerce-mid-challenge\.m2\repository</localRepository>

  <!-- Mantém apenas o Central; pode adicionar mirrors se quiser futuramente -->
  <mirrors>
    <mirror>
      <id>central</id>
      <name>Maven Central</name>
      <url>https://repo.maven.apache.org/maven2</url>
      <mirrorOf>central</mirrorOf>
    </mirror>
  </mirrors>

  <!-- Força IPv4 (útil em redes que bloqueiam IPv6) -->
  <profiles>
    <profile>
      <id>ipv4</id>
      <properties>
        <java.net.preferIPv4Stack>true</java.net.preferIPv4Stack>
      </properties>
    </profile>
  </profiles>
  <activeProfiles>
    <activeProfile>ipv4</activeProfile>
  </activeProfiles>
</settings>
